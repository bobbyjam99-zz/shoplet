<h1>商品の登録</h1>

<% form_for(@product) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :product_type_id %><br />
    <%= f.select :product_type_id,
      @product_types.collect{|p| [ p.name, p.id ]},{} %>
  </p>
  <p>
    <%= f.label :price %><br />
    $<%= text_field_tag 'product[price]', price(@product)[1..-1] %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', products_path %>